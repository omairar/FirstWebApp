
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Razor Expressions</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,700;0,800;0,900;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Actionss/Index">Action</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/RazorExpressions/Index">Razor Expressions</a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>
    <div class="container pt-5 d-flex">
        

        
        <div class="row " style="width: 100%">
            <div class="col-md-12">
                <table class="table ">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Roll</th>
                            <th scope="col">Name</th>
                            <th scope="col">Marks</th>
                            <th scope="col">Result</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@ViewBag.studRoll</td>
                            <td>@ViewBag.studName</td>
                            <td>@ViewBag.studMk</td>
                            <td>

                                @if (ViewBag.studMk >= 33)
                                {
                                    <span class="text-success">Pass</span>
                                }
                                else if (ViewBag.studMk < 33)
                                {
                                    <span class="text-danger">Fail</span>
                                }

                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-12 mt-3">
                <h2> For Loop</h2>
                <div class="row">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="col-md-12">
                            @for (int j = 0; j <= i; j++)
                            {
                                <span>⭐</span>
                            }
                        </div>

                    }
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <h2> For Each Loop</h2>
                <div class="row">
                    @foreach (var emot in ViewBag.emotList)
                    {
                        <div class="col-md-12">
                            <h3>@emot</h3> 
                        </div>
                    }
                    
                </div>
            </div>
        </div>

    </div>

    <script src="~/Content/bootstrap.bundle.min.js"></script>
</body>
</html>
